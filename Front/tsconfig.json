{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"types": ["node"],
		"allowJs": true,
		"skipLibCheck": true,
		"typeRoots": ["./src/global.d.ts", "./node_modules/@types"],
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"allowImportingTsExtensions": true,
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next",
			},
		],
		"paths": {
			"@/*": ["./src/*"],
		},
		"strictNullChecks": true,
	},
	"include": ["next-env.d.ts", ".next/types/**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "**/*.cy.tsx", "**/*.cy.ts", "**/const.ts"],
}
